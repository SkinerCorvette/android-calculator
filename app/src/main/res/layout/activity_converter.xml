<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp"
    android:paddingTop="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Градусы в радианы -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Градусы в радианы"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/degreesInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="градусы"
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:padding="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/radiansOutput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/output_background"
                    android:padding="12dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="радианы"
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/convertDegreesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РАССЧИТАТЬ"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/button_operator"
            android:layout_marginBottom="24dp" />

        <!-- Километры в мили -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Километры в мили"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/kmInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="километры"
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:padding="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/milesOutput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/output_background"
                    android:padding="12dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="мили"
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/convertKmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РАССЧИТАТЬ"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/button_operator"
            android:layout_marginBottom="24dp" />

        <!-- Метры в футы -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Метры в футы"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/metersInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="метры"
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:padding="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/feetOutput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/output_background"
                    android:padding="12dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="футы"
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/convertMetersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РАССЧИТАТЬ"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/button_operator"
            android:layout_marginBottom="24dp" />

        <!-- Десятичные в шестнадцатеричные -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Десятичные в шестнадцатеричные"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/decimalHexInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:inputType="number" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="десят."
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:padding="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hexOutput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/output_background"
                    android:padding="12dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="шестнад."
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/convertHexButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РАССЧИТАТЬ"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/button_operator"
            android:layout_marginBottom="24dp" />

        <!-- Десятичные в двоичные -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Десятичные в двоичные"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/decimalBinaryInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:inputType="number" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="десят."
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:padding="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/binaryOutput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:background="@drawable/output_background"
                    android:padding="12dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="двоим."
                    android:textColor="#80FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/convertBinaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="РАССЧИТАТЬ"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/button_operator"
            android:layout_marginBottom="32dp" />

        <!-- Кнопка возврата к калькулятору -->
        <Button
            android:id="@+id/buttonToCalculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="КАЛЬКУЛЯТОР"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/button_equals"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>